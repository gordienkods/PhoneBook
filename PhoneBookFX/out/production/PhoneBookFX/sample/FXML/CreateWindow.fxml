<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets bottom="15" top="15" left="15" right="15"></Insets>
    </padding>

    <children>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="FIRST NAME:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="5" alignment="CENTER_LEFT"
                   fx:id="firstName" editable="true" />

        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="LAST NAME:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="5" alignment="CENTER_LEFT"
                  fx:id="lastName" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="2" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="PHONE NUMBER 1:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="5" alignment="CENTER_LEFT"
                  fx:id="phoneNumber1" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="3" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="PHONE TYPE 1:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="5" alignment="CENTER_LEFT"
              fx:id="phoneType1" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="4" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="PHONE NUMBER 2:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="5" alignment="CENTER_LEFT"
                   fx:id="phoneNumber2" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="5" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="PHONE TYPE 2:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="5" alignment="CENTER_LEFT"
                   fx:id="phoneType2" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="6" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="PHONE NUMBER 3:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="5" alignment="CENTER_LEFT"
                   fx:id="phoneNumber3" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="7" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="PHONE TYPE 3:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.columnSpan="5" alignment="CENTER_LEFT"
                   fx:id="phoneType3" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="8" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="EMAIL:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.columnSpan="5" alignment="CENTER_LEFT"
              fx:id="email" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="9" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="BIRTHDAY:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="9" GridPane.columnSpan="5" alignment="CENTER_LEFT"
              fx:id="birthday" editable="true"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="10" maxWidth="Infinity" maxHeight="Infinity" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               text="ADRESS:" alignment="CENTER_LEFT"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="10" GridPane.columnSpan="5" alignment="CENTER_LEFT"
              fx:id="adress" editable="true"/>

        <Button GridPane.columnIndex="0" GridPane.rowIndex="11" text="ADD" alignment="CENTER_LEFT" onAction="#createNewContact"/>
        <Button GridPane.columnIndex="1" GridPane.rowIndex="11" text="CANCEL" alignment="CENTER_LEFT" onAction="#goToMainWindow"/>



    </children>


</GridPane>